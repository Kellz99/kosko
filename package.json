{
  "name": "kosko",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://github.com/tommy351/kosko",
  "repository": {
    "type": "git",
    "url": "https://github.com/tommy351/kosko.git"
  },
  "author": "Tommy Chen <tommy351@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "build": "lerna run --ignore @kosko/website build && node scripts/build.js",
    "clean": "node scripts/build.js --clean",
    "watch": "npm run build -- --watch",
    "bootstrap": "lerna bootstrap",
    "test": "npm-run-all test:*",
    "test:unit": "jest",
    "test:integration": "jest --config integration/jest.config.js",
    "typedoc": "typedoc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.8",
    "@types/pkg-dir": "^2.0.1",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "cross-spawn": "^7.0.3",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "execa": "^4.0.3",
    "globby": "^11.0.1",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "jest-extended": "^0.11.5",
    "jest-serializer-path": "^0.1.15",
    "kubernetes-models": "^1.0.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0",
    "make-dir": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "pkg-dir": "^4.2.0",
    "prettier": "^2.1.2",
    "symlink-dir": "^4.1.0",
    "temp-dir": "^2.0.0",
    "tmp-promise": "^3.0.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typescript": "~4.0.3"
  }
}
