{
  "extends": "../.eslintrc",
  "rules": {
    "node/no-unpublished-require": "off",
    "node/no-unpublished-import": "off",
    "node/shebang": "off"
  },
  "settings": {
    "node": {
      "allowModules": ["@kosko/env", "@kosko/template"]
    }
  },
  "overrides": [
    {
      "files": ["esm/**/*"],
      "rules": {
        "jest/expect-expect": "off",
        "jest/no-done-callback": "off"
      }
    }
  ]
}
